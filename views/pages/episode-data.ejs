<!DOCTYPE html>
<html>
<head>
  <%- include ("../partials/header.ejs") %>
</head>

<body>

<%- include ("../partials/nav.ejs") %>

<div class="jumbotron text-center">
  <div class="container">
    <a href="/" class="lang-logo">
      <img src="/lang-logo.jpg">
    </a>
    <h2>BetterBreak Wiki</h2>
    <h4>La fuente más confiable de información de Braking Bad y Better Call Saul</h4>
    <h6>Powered by: <a href="https://tarea-1-breaking-bad.herokuapp.com">tarea-1-breaking-bad</a></h6>
  </div>
</div>

<div class="container content">
  <h1><%-episode.series%>: Temporada <%- episode.season %> - Capítulo <%- episode.episode %></h1>
  <hr>
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <h2>Nombre</h2>
      </div>
      <div class="row">
        <h2>Fecha de Estreno</h2>
      </div>
      <div class="row">
        <h2>Personajes</h2>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row">
        <h2><%- episode.title %></h2>
      </div>
      <div class="row">
        <h2><%- episode.air_date.split("T")[0].split("-").reverse().join("/") %></h2>
      </div>
      <div class="row sub-titles">
        <ul style="list-style-type:none;">
          <% episode.characters.forEach(x=> {%>
          <li><h2><a href="/characters?name=<%- x.replace(' ', '+') %>"><%- x %></a></h2></li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>


</body>
</html>
